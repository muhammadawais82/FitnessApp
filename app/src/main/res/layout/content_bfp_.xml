<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_allContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b11"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="logic2magic.com.health_fitness.BFP_Activity"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#50000000"

    android:id="@+id/ll_upper"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Body Fat Percentage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0.0 % "
        android:textColor="#000000"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/tv_bfp_ans"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#50000000"
        android:id="@+id/ll_gender"
        >

        <ImageButton
            android:id="@+id/btn_male"
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:background="@drawable/male_select"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:alpha=".3"
            android:background="@drawable/v_line">

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_female"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"

            android:background="@drawable/female"
            />

    </LinearLayout>


</LinearLayout>

    <!--.................................Upper Layout End and Lower Start.......................................-->

    <ScrollView
        android:id="@+id/sv_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:touchscreenBlocksFocus="true">












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll_lower"
            >

            <!--Liner Layout for The All Inforamtion of Male-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_male"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:layout_marginLeft="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#75ffffff"
                    android:id="@+id/ll_tableContainer_male">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Fat Chart"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textColor="#d2000000" />


                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:outlineProvider="background"
                        android:background="@drawable/table_border">

                        <TableRow android:gravity="center">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:text="Classification"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:textColor="#d2000000" />
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="30dp"
                                android:text="Percentage"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:textColor="#d2000000" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Essential Fat"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:text="2-4%"
                                android:gravity="right"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Athletes"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:text="6-13%"
                                android:gravity="right"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Fitness"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:gravity="right"
                                android:text="14-17%"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Acceptable"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:gravity="right"
                                android:text="18-25%"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Obese"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:gravity="right"
                                android:text="25%+"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>


                    </TableLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:layout_marginTop="10dp"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_weight_male">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_weight_male"
                            android:layout_width="170dp"
                            android:layout_height="45dp"

                            android:hint="Weight(KG)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_weight_male"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_kg"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_waist_male">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_waist_male"
                            android:layout_width="170dp"
                            android:layout_height="45dp"

                            android:hint="Waist(INCH)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_waist_male"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_ft"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Liner Layout for The All Inforamtion of Female-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_female"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:layout_marginLeft="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#75ffffff"
                    android:id="@+id/ll_tableContainer_female">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Fat Chart"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textColor="#d2000000" />


                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:outlineProvider="background"
                        android:background="@drawable/table_border">

                        <TableRow android:gravity="center">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:text="Classification"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:textColor="#d2000000" />
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="30dp"
                                android:text="Percentage"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:textColor="#d2000000" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Essential Fat"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:text="10-12%"
                                android:gravity="right"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Athletes"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:text="14-20%"
                                android:gravity="right"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Fitness"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:gravity="right"
                                android:text="21-24%"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Acceptable"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:gravity="right"
                                android:text="25-31%"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_marginRight="40dp"
                                android:text="Obese"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginLeft="15dp" />
                            <TextView
                                android:layout_marginLeft="40dp"
                                android:gravity="right"
                                android:text="32%+"
                                android:textSize="13dp"
                                android:textColor="#c8000000"
                                android:layout_marginRight="20dp" />

                        </TableRow>


                    </TableLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:layout_marginTop="10dp"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_weight_female">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_weight_female"
                            android:layout_width="170dp"
                            android:layout_height="45dp"

                            android:hint="Weight(KG)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_weight_female"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_kg"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_waist_female">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_waist_female"
                            android:layout_width="170dp"
                            android:layout_height="45dp"

                            android:hint="Waist(INCH)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_waist_female"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_ft"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_wrist_female">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_wrist_female"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:hint="Wrist(INCH)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_wrist_female"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_ft"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_hip_female">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_hip_female"
                            android:layout_width="170dp"
                            android:layout_height="45dp"

                            android:hint="Hip(INCH)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_hip_female"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_ft"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px"
                    android:background="#75ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_forearm_female">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_forearm_female"
                            android:layout_width="170dp"
                            android:layout_height="45dp"

                            android:hint="Fore Arm(INCH)"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <ToggleButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tb_forearm_female"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:background="@drawable/switch_ft"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_calculate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="#b4000000">

                <Button
                    android:id="@+id/btn_calBFP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="1dp"
                    android:text="Calculate BFP"
                    />

            </LinearLayout>



        </LinearLayout>


    </ScrollView>


</LinearLayout>
